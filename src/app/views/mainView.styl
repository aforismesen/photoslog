.mainView {
  position: relative
  width: 100%
  height: 100%
  overflow: hidden
  background: linear-gradient(to bottom, #172A71 0%,#20A6AB 100%)

  > .navigationBarView {
    height: 65px
    position: absolute
    top: 0
    width: 100%
    color: #fff
    font-size: 20px
    line-height: 60px
    text-align: center
  }

  > .tabBarView {
    height: 36px
    top: 65px
    position: absolute
    color: #fff
    width: 100%
    text-align: center
  }

  > .graphView {
    height: 210px
    top: 101px
    position: absolute

    path, line {
      fill: none
      stroke: #fff
      stroke-width: 2
      shape-rendering: crispEdges
    }
  }

  > .scrollView {
    position: relative
    width: 100%
    height: 100%
    overflow-x: hidden
    overflow-y: auto
    -webkit-overflow-scrolling: touch

    > .recentEventsView {
      margin-top: 311px
      background: white
    }
  }
}
