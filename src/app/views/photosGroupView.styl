.photosGroupView {
  width: 100%
  line-height: 0

  > .image {
    display: inline-block
    background-repeat: no-repeat
    background-size: cover
    background-position: center center
    background-color: rgba(0, 0, 0, .2)

    &.full {
      width: 100%
      margin-bottom: 7px
    }

    &.row {
      margin-bottom: 7px
      &:not(:last-child) {
        margin-right: 7px
      }
    }
  }
}
